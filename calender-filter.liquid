<div class="container">
  <div class="dropdown-container">
    <!-- Collection Dropdown -->
    <div class="collection-container">
      <div class="custom-arrows">
        <span id="prev-arrow" class="arrow">‹</span>
      </div>
      <select id="collection-filter" class="custom-dropdown">
        {% for collection in collections %}
          <option
            value="{{ collection.url }}"
            {% if forloop.first %}
              selected
            {% endif %}
          >
            {{ collection.title }}
          </option>
        {% endfor %}
      </select>
      <div class="custom-arrows">
        <span id="next-arrow" class="arrow">›</span>
      </div>
    </div>

    <!-- Vendor Dropdown -->
    <div class="vendor-container">
      <select id="vendor-filter" class="custom-dropdown">
        <option value="">Brands</option>
        {% assign vendors = '' %}
        {% for product in products %}
          {% assign vendor = product.vendor %}
          {% unless vendors contains vendor %}
            {% capture vendors %}{{ vendors | append: ',' | append: vendor }}{% endcapture %}
            <option value="{{ vendor }}">{{ vendor }}</option>
          {% endunless %}
        {% endfor %}
      </select>
    </div>
  </div>

  <!-- Product List -->
  {% assign current_month = now | date: '%B' | downcase %}
  {% assign current_year = now | date: '%Y' %}

  <div
    class="product-list"
    id="product-list"
    data-current-month="{{ current_month }}"
    data-current-year="{{ current_year }}"
  >
    {% for product in collection.products %}
      {% assign tags = product.tags %}
      <div
        class="product-item"
        data-tags="{{ tags | join: ',' }}"
        data-vendor="{{ product.vendor }}"
        {% if tags contains current_month and tags contains current_year %}
          data-visible="true"
        {% else %}
          data-visible="false"
        {% endif %}
      >
        <a href="{{ product.url }}">
          <h3>{{ product.title }}</h3>
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
        </a>
      </div>
    {% endfor %}
  </div>
</div>
